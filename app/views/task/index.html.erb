<h1>Index Task</h1>

    <%= link_to 'New', new_task_path %>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        <% @tasks.each do |task| %>
            <tr>
                <td> <%= task.name %> </td>
                <td> <%= task.description %> </td>
                <td> <%= link_to 'Show', task_path(task._id) %> </td>
                <td> <%= link_to 'Edit', edit_task_path(task._id) %></td>
                <td> <%= link_to 'Delete', task_path(task._id), method: :delete, data: { confirm: 'Are you sure?' } %> </td>
            </tr>
        <% end %>
    </tbody>
</table>
<%= paginate @tasks %>
